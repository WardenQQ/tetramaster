<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Connected"
    android:background="#ffffff"
    android:contextClickable="false">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dire coucou"
        android:id="@+id/btn_envois"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="142dp"
        android:clickable="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_connect"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geoloc Carte"
        android:id="@+id/btn_geoloc"
        android:layout_below="@+id/txt_connect"
        android:layout_alignStart="@+id/btn_envois"
        android:layout_marginTop="89dp"
        android:layout_alignEnd="@+id/btn_envois" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aller a la grille"
        android:id="@+id/buttonGrid"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/txt_connect"
        android:layout_centerHorizontal="true" />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deconnection"
            android:id="@+id/btn_disconnect" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
    />
</RelativeLayout>
